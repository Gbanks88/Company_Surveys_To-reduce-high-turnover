PROJECT_NAME           = "Requirements Database"
PROJECT_NUMBER         = 1.0
PROJECT_BRIEF         = "A C++ Requirements Database with Model-Based System Integration"

OUTPUT_DIRECTORY      = @CMAKE_CURRENT_BINARY_DIR@/doc_doxygen/
CREATE_SUBDIRS       = NO

EXTRACT_ALL          = YES
EXTRACT_PRIVATE      = NO
EXTRACT_PACKAGE      = YES
EXTRACT_STATIC       = YES
EXTRACT_LOCAL_CLASSES = YES

BUILTIN_STL_SUPPORT  = YES
INLINE_SIMPLE_STRUCTS = YES

RECURSIVE            = YES
EXCLUDE_PATTERNS     = */build/* */tests/*

SOURCE_BROWSER       = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION  = YES

GENERATE_HTML        = YES
HTML_OUTPUT         = html
HTML_FILE_EXTENSION = .html
HTML_DYNAMIC_SECTIONS = YES
SEARCHENGINE        = YES

GENERATE_LATEX      = NO

HAVE_DOT            = YES
